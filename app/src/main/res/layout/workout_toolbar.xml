<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <ImageView
        android:id="@+id/tb_leaderboard_page"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:onClick="addFriendDialog"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tb_workout_page"
        app:srcCompat="@drawable/add_friend"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/add_friend_desc" />

    <ImageView
        android:id="@+id/tb_workout_page"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:onClick="addFriendDialog"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tb_leaderboard_page"
        app:layout_constraintEnd_toStartOf="@+id/tb_friends_page"
        app:srcCompat="@drawable/add_friend"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/add_friend_desc" />

    <ImageView
        android:id="@+id/tb_friends_page"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:onClick="addFriendDialog"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tb_workout_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_friend"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/add_friend_desc" />

</androidx.appcompat.widget.Toolbar>