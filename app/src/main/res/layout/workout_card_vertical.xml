<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardBackgroundColor="@color/md_theme_light_primaryContainer"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/img_workout"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/workoutDiagram" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_workout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:minHeight="48dp"
                android:paddingHorizontal="2dp"
                android:text="@string/title_goes_here"
                android:textAlignment="textStart"
                android:textColor="@color/md_theme_light_onPrimaryContainer"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/workout_blurb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:text="TextView"
                android:textColor="@color/md_theme_light_onPrimaryContainer" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>