<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="24dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/md_theme_light_primary"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_workout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="2"
                android:minHeight="48dp"
                android:text="@string/title_goes_here"
                android:textColor="@color/md_theme_light_onPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/img_workout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/workoutDiagram" />

            <Button
                android:id="@+id/btn_instructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_secondaryContainer"
                android:text="@string/instructions"
                android:textColor="@color/md_theme_light_onSecondaryContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onClick"/>

            <CheckBox
                android:id="@+id/ckb_completed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|center_horizontal|center_vertical"
                android:minHeight="48dp"
                android:text="@string/completed"
                android:textAlignment="textStart"
                android:textColor="@color/md_theme_light_onPrimary"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_workout_list_title" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>