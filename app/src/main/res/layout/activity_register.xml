<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".workout.activity.RegisterActivity">

        <TextView
            android:id="@+id/welcome_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/welcome"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <view
            android:id="@+id/view_register"
            class="androidx.appcompat.widget.AppCompatTextView"
            android:layout_width="273dp"
            android:layout_height="369dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_register" />

        <EditText
            android:id="@+id/register_EmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:drawableStart="@drawable/account"
            android:ems="10"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            app:layout_constraintEnd_toEndOf="@+id/view_register"
            app:layout_constraintStart_toStartOf="@+id/view_register"
            app:layout_constraintTop_toTopOf="@+id/view_register" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:drawableStart="@drawable/password"
            android:ems="10"
            android:hint="@string/repeat_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            app:layout_constraintEnd_toEndOf="@+id/view_register"
            app:layout_constraintStart_toStartOf="@+id/view_register"
            app:layout_constraintTop_toBottomOf="@+id/repeat_register_Password" />

        <EditText
            android:id="@+id/repeat_register_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/password"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            app:layout_constraintEnd_toEndOf="@+id/view_register"
            app:layout_constraintStart_toStartOf="@+id/view_register"
            app:layout_constraintTop_toBottomOf="@+id/register_EmailAddress" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#943C3C"
            android:text="@string/sign_up_btn"
            app:layout_constraintEnd_toEndOf="@+id/view_register"
            app:layout_constraintStart_toStartOf="@+id/view_register"
            app:layout_constraintTop_toBottomOf="@+id/register_password" />

        <TextView
            android:id="@+id/already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/have_an_account_txt"
            app:layout_constraintStart_toStartOf="@+id/view_register"
            app:layout_constraintTop_toBottomOf="@+id/view_register" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>